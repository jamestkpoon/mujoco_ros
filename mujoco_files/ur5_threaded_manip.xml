<mujoco>

    <compiler angle="radian" />

    <size njmax="500" nconmax="100" />

    <visual>
        <map znear="0.001" />
        <headlight active="1"/>
    </visual>

    <default>
        <geom contype='1' conaffinity='1' condim='4'  margin="1e-3" solref=".01 1" solimp=".99 .99 .01" />
        <light castshadow="false" diffuse="1 1 1" />
        <camera fovy="60" />
        <motor gear="0.8"/>
        <velocity kv="10"/>
        <position kp="5"/>
    </default>

    <include file="ur5/ur5.xml"/>

    <asset>
        <mesh file="objects/big_bolt.stl" scale="0.005 0.005 0.005"/>
        <mesh file="objects/big_nut.stl" scale="0.005 0.005 0.005"/>
    </asset>
    
    <worldbody>
        <body name="bolt" pos="0.8 -0.2 0.875" quat="0 0 1 0">
            <geom name="bolt_geom" type="mesh" mesh="big_bolt" material="RobMat"/>
            <joint type="free"/>
        </body>

        <body name="nut" pos="0.8 0.2 0.8">
            <geom name="nut_geom" type="mesh" mesh="big_nut" material="RobMat"/>
            <joint type="free"/>
        </body>        
    </worldbody>


</mujoco>
